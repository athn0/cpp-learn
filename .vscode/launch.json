    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch (linux)",
            "type": "cppdbg",
            "program": "${fileDirname}${pathSeparator}build${pathSeparator}${workspaceFolderBasename}",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                }
            ],
            "showDisplayString": true   
        }
    ]
    
}